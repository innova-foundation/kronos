//- simple.pug

doctype html
html(dir="ltr", lang="en-US")
	head
		meta(http-equiv="content-type", content="text/html; charset=utf-8")
		meta(name="author", content="InnoVault")
		link(rel='stylesheet', href='//cdnjs.cloudflare.com/ajax/libs/toastr.js/2.0.2/css/toastr.min.css')
		link(rel='stylesheet', href='//cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.0-2/css/all.min.css')
		link(rel='stylesheet', href='//cdnjs.cloudflare.com/ajax/libs/animate.css/4.0.0/animate.min.css')
		style.
			/* style.css */	

			@import url('https://fonts.googleapis.com/css2?family=Open+Sans:wght@300&display=swap');
					
			*,
			*::before,
			*::after {
			box-sizing: border-box;
			}

			html {
			background-color: #111;
			font-family: 'Open Sans', sans-serif;
			}

			body {
			font-weight: 500;
			-webkit-font-smoothing: antialiased;
			-moz-osx-font-smoothing: grayscale;
			text-rendering: optimizeLegibility;
			background-color: #111;
			}

			h1 {
			font-weight: 700;
			color: #000;
			text-align: center;
			margin-bottom: .5em;
			margin-top: 0em;
			color: #FFF;
			}

			a {
			font-size: 0.98em;
			color: #8a97a0;
			text-decoration: none;
			}
			a:hover {
			color: green;
			}

			.container {
			display: flex;
			-webkit-display: box;
			-moz-display: box;
			-ms-display: flexbox;
			-webkit-display: flex;
			flex-wrap: wrap;
			justify-content: center;
			align-content: center;
			padding: 10%;
			height: 100vh !import;
			margin: 0;
			}

			form {
			background-color: #fff;
			padding: 2em;
			border-radius: 8px;
			max-width: 600px;
			display: flex;
			flex-wrap: wrap;
			flex-direction: column;
			justify-content: center;
			box-shadow: 0 10px 40px -14px rgba(0, 0, 0, 0.25);
			display: flex;
			flex-wrap: wrap;
			flex-direction: column;
				background-color: #333;
			}
			form input {
			color: #FFF;
			background-color: #222;
			box-shadow: 0 1px 0 rgba(0, 0, 0, 0.03) inset;
			border: none;
			border-radius: 4px;
			padding: 1em;
			width: 100%;
			}
			form input:focus {
			outline: none;
			}

			.button, input {
			font-weight: 600;
			text-align: center;
			font-size: 19px;
			color: #FFF;
			background-color: #333;
			width: 100%;
			border: none;
			border-radius: 4px;
			padding: .75em;
			margin-top: 0em;
			margin-bottom: 1em; 
			cursor: pointer;
			overflow: hidden;
			transition: all 200ms ease-in-out;
			box-shadow: 0px 2px 6px rgba(0, 0, 0, 0.3);
			}


			.button {
			padding: 1em;
			margin-bottom: 0px;
			}

			.fa-sync {
				cursor: pointer;
			}
	body
		.container(style='margin-top:50px !important;margin:0;padding:0;', align='center')
			img(src="https://user-images.githubusercontent.com/10162347/93844293-ed323180-fc59-11ea-9331-9f8ac37f797c.png", height="200px", width="200px", align="center")
		.container(style='margin-top:20px !important;margin:0;padding:0;', align='center')
			form(action="/simplesetup" method="post")
				.form-content
					span(style='color:#ccc;')
						| Core Mode Setup
					br
					span(style='color:#777;font-size:12px;')
						| Below is your BIP39 Generated 24 Word Seed "Phrase", Ensure that you write these words down and save it somewhere safe. Your InnoVault wallet will be derived from this phrase.
					br
					br
					a(onClick="window.location.reload();", style="color:#777;")
						i.fas.fa-sync.fa-2x
					br
					input(type='hidden' name='_csrf' value=csrftoken)
					input(type="hidden" id="SEED" name="SEED" value=seedphrase)
					p.animate__animated.animate__fadeIn(style='background-color:#000;color:#FFF;padding:20px;border-radius:15px;font-size:21px;') #{seedphrase}
					br
					input.button(style='background-color: #444;', type="submit" value="Next Step")
				br
				span(style='color:#666;')
					| Step 1 of 2 in Core Mode Setup
		span(style='color:#333;bottom:35px;left:15px;position:absolute;')
			a(onclick='window.history.back()', style='color:#666;cursor: pointer;')
					i.fas.fa-arrow-left.fa-3x
		script(src='/js/lib/jquery-3.1.1.min.js')
		script(src='//cdnjs.cloudflare.com/ajax/libs/toastr.js/2.0.2/js/toastr.min.js')
		script(src='//cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.0-2/js/all.min.js')

		!=toasts